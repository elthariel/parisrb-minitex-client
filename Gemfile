# define our source to loook for gems
source "http://rubygems.org/"

# declare the sinatra dependency
gem "sinatra"

# setup our test group and require rspec
group :test do
  gem "rspec"
end

gem 'haml'

# require a relative gem version
gem "i18n", "~> 0.4.1"

# Consume API
gem 'rest-client', require: 'rest_client'
